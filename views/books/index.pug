extends ../layout

block content
    h1 Books
    form(action="/books", method="get")
        label(for='search') Search books: 
        input#search(type='text' name='search') 
        button Search 
    p
        a.button(href='/books/new') Create New Book
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                tr
                    td
                        a(href='/books/' + book.id)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year
        